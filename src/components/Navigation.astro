---
import Hamburger from "./Hamburger.astro";
const pages = {
    Home: "/",
    About: "/about",
    Blog: "/blog",
};
---

<Hamburger />

<div class="nav">
    {
        Object.entries(pages).map(([key, value]) => (
            <a class="nav-button" href={`${value}`}>
                {key}
            </a>
        ))
    }
</div>

<style>
    .nav {
        width: 100%;
        display: flex;
        flex: row;
        gap: 20px;
        justify-content: center;
    }

    .nav a {
        text-decoration: none;
        color: green;
        font-weight: bold;
    }

    .nav a:hover {
        text-decoration: underline;
    }

    @media screen and (max-width: 636px) {
        .nav a {
            color: black;
        }
    }
</style>
